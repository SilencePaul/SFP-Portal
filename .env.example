# ============================================
# SFP-Portal Environment Variables
# ============================================
# 
# Copy this file to .env and fill in the values
# DO NOT commit .env to git!
#

# ============================================
# Database Configuration
# ============================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=sfp_portal
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development
# For local dev: http://localhost:3000
# For production: use your DigitalOcean domain (e.g., https://yourdomain.com)
FRONTEND_URL=http://localhost:3000

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Email Service (SendGrid)
# ============================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Leave empty if email functionality is not needed
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ============================================
# CORS Configuration
# ============================================
# Set to your frontend URL to allow CORS requests
CORS_ORIGIN=http://localhost:3000

# ============================================
# Web/Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:5000
